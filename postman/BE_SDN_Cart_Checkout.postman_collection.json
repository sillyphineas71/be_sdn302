{
  "info": {
    "name": "BE_SDN API - With Auth",
    "description": "Complete API collection with Bearer token authentication for Cart and Order endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "be-sdn-with-auth"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password\": \"Pass123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201', () => pm.response.to.have.status(201));",
                  "try {",
                  "  const json = pm.response.json();",
                  "  if (json?.user?.id) pm.collectionVariables.set('userId', json.user.id);",
                  "} catch (e) {}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password\": \"Pass123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "try {",
                  "  const json = pm.response.json();",
                  "  if (json?.token) pm.collectionVariables.set('token', json.token);",
                  "} catch (e) {}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cart",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart"]
            }
          }
        },
        {
          "name": "Add Item to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/cart/items",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "items"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"foodId\": \"{{foodId1}}\",\n  \"quantity\": 2\n}"
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "if (!pm.collectionVariables.get('foodId1')) {",
                  "  pm.collectionVariables.set('foodId1', 'REPLACE_WITH_REAL_FOOD_ID');",
                  "}"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200 or 201', () => {",
                  "  pm.expect([200, 201]).to.include(pm.response.code);",
                  "});",
                  "try {",
                  "  const json = pm.response.json();",
                  "  if (json?.item?.id) pm.collectionVariables.set('cartItemId', json.item.id);",
                  "} catch (e) {}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Update Cart Item",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/cart/items/{{cartItemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "items", "{{cartItemId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 3\n}"
            }
          }
        },
        {
          "name": "Remove Cart Item",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cart/items/{{cartItemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "items", "{{cartItemId}}"]
            }
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cart",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart"]
            }
          }
        }
      ]
    },
    {
      "name": "Checkout",
      "item": [
        {
          "name": "Checkout from Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/cart/checkout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "checkout"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"shipping\": 15000,\n  \"discount\": 0,\n  \"tax\": 0,\n  \"notes\": \"Giao giá»¯a 6-7 PM\",\n  \"paymentMethodCode\": \"COD\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201', () => pm.response.to.have.status(201));",
                  "try {",
                  "  const json = pm.response.json();",
                  "  if (json?.order?.id) pm.collectionVariables.set('orderId', json.order.id);",
                  "} catch (e) {}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Order",
      "item": [
        {
          "name": "My Orders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/order/my-orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "order", "my-orders"]
            }
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/order/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "order", "{{orderId}}"]
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/order/{{orderId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "order", "{{orderId}}", "status"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"confirmed\"\n}"
            }
          }
        },
        {
          "name": "Add Order Direct (Legacy)",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/order/add",
              "host": ["{{baseUrl}}"],
              "path": ["api", "order", "add"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"items\": [\n    { \"foodId\": \"{{foodId1}}\", \"quantity\": 1 },\n    { \"foodId\": \"{{foodId2}}\", \"quantity\": 2 }\n  ],\n  \"shipping\": 15000,\n  \"discount\": 0,\n  \"tax\": 0,\n  \"notes\": \"Direct order\",\n  \"paymentMethodCode\": \"COD\"\n}"
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:9999"
    },
    {
      "key": "userId",
      "value": ""
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "foodId1",
      "value": ""
    },
    {
      "key": "foodId2",
      "value": ""
    },
    {
      "key": "cartItemId",
      "value": ""
    },
    {
      "key": "orderId",
      "value": ""
    }
  ]
}
